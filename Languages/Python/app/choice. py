def by_used_km():
    return rslt(shoes, "used km")

def by_race():
    return flt(shoes, "race")

def by_rainy():
    return flt(shoes, "rainy day")

def by_walk():
    return flt(shoes, "walk")

def by_lsd():
    return flt(shoes, "LSD")

def for_lsd():
