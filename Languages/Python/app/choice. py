#!/usr/bin/python
import datetime
import requests
import random

shoes = [{ "name" : "AlphyFly Next%",   "used km" : 100, "race" : True, "rainy day" : False},  
         { "name" : "VaporFly Next%",   "used km" : 152, "race" : True, "rainy day" : False}, 
         { "name" : "Tempo Next%",      "used km" : 100, "race" : True, "rainy day" : False}, 
         { "name" : "Fly3",             "used km" : 300, "race" : True, "rainy day" : False}] 
         { "name" : "160X",             "used km" : 520, "race" : True, "rainy day" : True}]

r = requests.get('http://www.weather.com.cn/data/sk/101070201.html')
r.encoding='utf-8'
print(r.json()['weatherinfo']['city'], r.json()['weatherinfo']['temp'])

y=datetime.datetime.now().year
m=datetime.datetime.now().month
d=datetime.datetime.now().day

def rslt(a,b):
    return sorted(shoes, key = lambda i: (i[a], i[b]))

def rnd(lst):
    return lst[int(random.random()*100%len(lst))]

