def by_rainy_lsd():
    return flt(by_rainy(), "LSD")

def rslt(lis,a):
    return sorted(lis, key = lambda i: (i[a]))

def flt(lis,k):
    return filter(lambda x:x[k] == True, lis)

def rnd(lst):
    return lst[int(random.random()*100%len(lst))]

def update_km(lis,name,plus):
    for i in lis:
        if i[name] == name:
            i["used km"] = i["used km"] + plus
    
def prt(lis):
    for i in lis:
         print(i)
    pirnt("------------------")

def output(lst):
